<resources>

    <!-- Themes -->
    <style name="DayActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/DayActionBar</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <item name="spbStyle">@style/GNowProgressBar</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>

    </style>

    <style name="NightActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/NightActionBar</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <item name="spbStyle">@style/GNowProgressBar</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>

    </style>

    <!-- ActionBar styles -->
    <style name="DayActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary_day</item>
    </style>

    <style name="NightActionBar"
        parent="@style/DayActionBar">
        <item name="android:background">@color/primary_night</item>
    </style>

    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="GNowProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_progressiveStart_speed">2</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_colors">@array/gplus_colors</item>
        <item name="spb_progressiveStart_activated">true</item>
    </style>


    <style name="NavigationDrawer">

    </style>


    <style name="NavigationDrawer.HeaderSection">
        <item name="android:textColor">@color/primary_day</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/navigationdrawer_header_background</item>
    </style>




    <style name="NavigationDrawer.SectionItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">5</item>
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <style name="NavigationDrawer.SectionItem.Icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="NavigationDrawer.SectionItem.Label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">@color/drawer_label_default</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">@dimen/drawer_category_fontsize</item>
        <item name="android:layout_weight">4</item>
    </style>

    <style name="detail_title">
    <item name="android:textColor">@color/navigation_drawer_background</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">25sp</item>
    </style>

    <style name="card_title">
        <item name="android:textColor">@color/navigation_drawer_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="detail_next_schedule">
        <item name="android:textColor">@color/primary_sub</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
