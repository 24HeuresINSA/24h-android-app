<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="@dimen/ouput_list_item_padding"
    android:paddingBottom="@dimen/ouput_list_item_padding"
    android:paddingTop="@dimen/ouput_list_item_padding">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/kro_card_view"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="4dp"
        android:elevation="5dp"
        android:background="@color/second_night"
        android:layout_margin="@dimen/abc_action_bar_subtitle_bottom_margin_material">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_live_update_time"
                android:text="11:40"
                android:layout_alignTop="@+id/list_item_live_update_title_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/list_item_live_update_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LiveUpdate !! "
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/list_item_live_update_time"
                android:layout_toStartOf="@+id/list_item_live_update_time"
                android:textColor="@color/light_black"

                android:textAppearance="@style/card_title"
                android:layout_marginLeft="@dimen/text_block_padding"
                android:layout_marginTop="@dimen/text_block_padding"
                android:layout_marginRight="@dimen/text_block_padding" />

            <TextView
                android:id="@+id/list_item_live_update_message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Il y a des vendeurs de glace au PS4!"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="italic"
                android:layout_below="@+id/list_item_live_update_title_text"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/text_block_padding"
                android:paddingTop="@dimen/spb_default_stroke_width"
                android:paddingBottom="@dimen/spb_default_stroke_width"
                android:paddingRight="@dimen/text_block_padding" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>