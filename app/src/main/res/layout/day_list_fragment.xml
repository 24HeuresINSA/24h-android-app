<?xml version="1.0" encoding="utf-8"?>
<com.insalyon.les24heures.view.TranslationLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <ListView
            android:id="@+id/list_resource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/listView_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/output_list_sticky_item_height"
            android:layout_weight="2"
            android:background="@color/third_day"
            android:orientation="vertical"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/list_sort_alphabetical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:background="@null"
                        android:id="@+id/sort_AZ_text"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_horizontal"
                        android:nestedScrollingEnabled="false"
                        android:src="@drawable/za_sort"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_sort_loc"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:background="@null"
                        android:id="@+id/sort_loc"
                        android:src="@drawable/ic_action_place" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_sort_time_loc"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:background="@null"
                        android:id="@+id/sort_time_loc_time_ic"
                        android:src="@drawable/ic_action_time" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:background="@null"
                        android:id="@+id/sort_time_loc_plus_ic"
                        android:src="@drawable/ic_action_new" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:background="@null"
                        android:id="@+id/sort_loc_place"
                        android:src="@drawable/ic_action_place" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/progress_wheel"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/GNowProgressBar"
            android:indeterminate="true"
            android:layout_marginTop="@dimen/output_list_sticky_item_height"
            android:visibility="gone" />


    </FrameLayout>

</com.insalyon.les24heures.view.TranslationLinearLayout>