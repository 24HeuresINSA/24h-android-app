<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp">

        <!--CONTENT-->
        <com.insalyon.les24heures.view.DetailSlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            sothree:panelHeight="@dimen/detail_header_height"
            sothree:shadowHeight="4dp"
            sothree:paralaxOffset="200dp">
            <!--sothree:umanoDragView="@+id/detail_sliding_layout_header"-->
            <!-->-->

            <!-- MAIN CONTENT -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_content">

                <!--REAL CONTENT-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/content_frame"></FrameLayout>

                <!--DETAIL SLIDING UP PARALLAX VIEW-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:background="#ffffbc53"
                    android:id="@+id/detail_paralax_header"
                    android:padding="50px">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#ffa6ff30"
                        android:padding="50px"></LinearLayout>

                </LinearLayout>

            </RelativeLayout>


            <!--SLIDING LAYOUT-->
            <!--<RelativeLayout-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="fill_parent">-->

                <fragment android:name="com.insalyon.les24heures.fragments.DetailFragment"
                    android:id="@+id/sliding_layout_content_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            <!--</RelativeLayout>-->

        </com.insalyon.les24heures.view.DetailSlidingUpPanelLayout>

        <!--NAVIGATION DRAWER-->
        <FrameLayout
            android:id="@+id/left_drawer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="start">

            <include layout="@layout/navigation_drawer" />

        </FrameLayout>

    </android.support.v4.widget.DrawerLayout>


</FrameLayout>

