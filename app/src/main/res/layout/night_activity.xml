<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.insalyon.les24heures.view.CustomDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <!--VISIBLE CONTENT-->
        <com.insalyon.les24heures.view.DetailSlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            sothree:panelHeight="@dimen/detail_header_height"
            sothree:paralaxOffset="200dp"
            sothree:shadowHeight="4dp">

            <!-- NOT THE SLIDING UP LAYOUT CONTENT -->
            <RelativeLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--REAL CONTENT-->
                <include
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/night_tabs" />

                <!--DETAIL'S PARALLAX TRICKS-->
                <include
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/detail_parallax" />

            </RelativeLayout>

            <!-- SLIDING UP LAYOUT CONTENT -->
            <fragment
                android:id="@+id/sliding_layout_content_fragment"
                android:name="com.insalyon.les24heures.fragments.NightDetailFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </com.insalyon.les24heures.view.DetailSlidingUpPanelLayout>

        <!--NAVIGATION DRAWER-->
        <FrameLayout
            android:id="@+id/left_drawer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="start">
            <include layout="@layout/navigation_drawer" />
        </FrameLayout>

    </com.insalyon.les24heures.view.CustomDrawerLayout>


</FrameLayout>

