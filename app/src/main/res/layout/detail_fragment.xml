<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/whole_detail_padding"
    android:paddingRight="@dimen/whole_detail_padding">



    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/detail_sliding_layout_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_day">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/text_block_padding"
            android:baselineAligned="false">

                <TextView
                    android:id="@+id/detail_sliding_title"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                   android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Title,..."
                    android:textAppearance="@style/detail_title"
                    android:clickable="false" />

            <!--  <RelativeLayout
                    android:layout_width="@dimen/diameter"
                    android:layout_height="@dimen/diameter"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/detail_favorites"
                        android:layout_width="@dimen/diameter"
                        android:layout_height="@dimen/diameter"
                        android:background="@drawable/floating_btn"
                        android:scaleType="center"
                        android:layout_marginBottom="@dimen/add_button_margin"
                        android:layout_marginEnd="@dimen/add_button_margin"
                        android:layout_marginRight="@dimen/add_button_margin"
                        android:src="@drawable/ic_action_important"
                        android:tint="@android:color/white"
                        android:animateLayoutChanges="true"
                        android:contentDescription="@string/favorite_desc" />

                </RelativeLayout>-->

            <TextView
                android:id="@+id/detail_next_schedule"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical|left"
                android:text="@string/detail_header_schedule"
                android:textAppearance="@style/detail_next_schedule"
                android:textSize="15sp" />

        </LinearLayout>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/detail_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_action_favorite"
            fab:fab_colorNormal="@color/pink_24"
            fab:fab_colorPressed="@color/navigation_drawer_background"
            fab:fab_colorRipple="@color/ripple"
            fab:fab_type="normal"
            fab:fab_shadow="false"/>

    </FrameLayout>

    <com.insalyon.les24heures.view.DetailScrollView
        android:id="@+id/detail_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/detail_schedules_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <com.insalyon.les24heures.view.AutoExpandGridView
                    android:id="@+id/detail_schedule_grid_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:numColumns="2"></com.insalyon.les24heures.view.AutoExpandGridView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_description_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fake_description_light"
                    android:textAppearance="?android:attr/textAppearanceLarge" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_carousel_layout"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="vertical">


                <com.insalyon.les24heures.JazzyViewPager.JazzyViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/jazzy_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_mini_maps_holder"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/detail_mini_maps"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/detail_url"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_url_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/detail_url_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/detail_url_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

        </LinearLayout>

    </com.insalyon.les24heures.view.DetailScrollView>

</LinearLayout>